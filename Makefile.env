# Directory with all the source code
DEV_ROOT ?= $(HOME)
MAKER_ROOT ?= $(DEV_ROOT)/maker

LINKER_SCRIPTS_ROOT ?= $(MAKER_ROOT)/linker-scripts

# Installation directory of TI software
TI_ROOT ?= /opt/ti

# TI MSP GCC toolchain
TOOLCHAIN_ROOT ?= $(TI_ROOT)/msp430-gcc

# LLVM/clang toolchain
LLVM_ROOT ?= $(DEV_ROOT)/llvm/llvm-install
CLANG_ROOT ?= $(LLVM_ROOT)

# TI toolchain (these paths are determined by CCS and the compiler version)
CCS_ROOT ?= $(TI_ROOT)/ccsv6
CG_TOOL_ROOT ?= $(CCS_ROOT)/tools/compiler/ti-cgt-msp430_4.4.3
PLATFORM_ROOT ?= $(CCS_ROOT)/ccs_base/msp430

# TI tool for flashing executables generated by the TI toolchain
FLASHER_ROOT ?= $(TI_ROOT)/MSP430Flasher_1.3.3

# FET I/O library for mspdebug
#   The binary included with TI MSG GCC toolchain is 32-bit, so it
#   won't be compatible with 64-bit mspdebug
#LIBMSP430_ROOT = $(TOOLCHAIN_ROOT)/bin
#   The alternative is to build the library manually from the MSP Debug Stack
#   distribution: http://www.ti.com/tool/MSPDS. This requires a patch:
#   http://www.dlbeer.co.nz/mspdebug/tilib.html
LIBMSP430_ROOT = $(TI_ROOT)/msp-debug-stack/MSPDebugStack_OS_Package

MEMENTOS_ROOT ?= $(DEV_ROOT)/mementos
DINO_ROOT ?= $(DEV_ROOT)/dino/DinoRuntime

# Various libraries (used only if target depends on one)
WISP_BASE_ROOT ?= $(DEV_ROOT)/wisp5/CCS/wisp-base
LIBEDB_ROOT ?= $(DEV_ROOT)/top-up-debugger/Firmware/libedb
LIBCHAIN_ROOT ?= $(DEV_ROOT)/libchain
LIBMSP_ROOT ?= $(DEV_ROOT)/libmsp
LIBMSPPRINTF_ROOT ?= $(DEV_ROOT)/libmspprintf
LIBMSPCONSOLE_ROOT ?= $(DEV_ROOT)/libmspconsole
LIBMSPBUILTINS_ROOT ?= $(DEV_ROOT)/libmspbuiltins
LIBMSPMATH_ROOT ?= $(DEV_ROOT)/libmspmath
LIBIO_ROOT ?= $(DEV_ROOT)/libio
LIBMSPSOFTUART_ROOT ?= $(DEV_ROOT)/msp430-softuart
LIBSPRITE_ROOT ?= $(DEV_ROOT)/libsprite
